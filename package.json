{
  "name": "react-testfy",
  "version": "1.0.0",
  "author": "Andres Alvarez <a.alvarez.sor@gmail.com>",
  "description": "A lightweight A/B Testing and Feature Flag React library focused on performance",
  "keywords": [
    "A/B Testing",
    "Feature Flags",
    "Experiment",
    "TypeScript",
    "JavaScript",
    "React"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/react-testfy.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "postversion": "git push && git push --tags",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "size-build": "npm run build",
    "size": "npm run size-build && size-limit"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@size-limit/preset-small-lib": "^4.4.5",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-docs": "^5.3.17",
    "@storybook/addon-info": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.5",
    "babel-loader": "^8.1.0",
    "husky": "^4.2.3",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "size-limit": "^4.4.5",
    "ts-loader": "^6.2.2",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "testfy": "^1.1.0"
  }
}
